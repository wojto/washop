{% extends 'admin/base.html.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <h3 class="col-md-12">
            {{ 'Lista użytkowników'|trans }}
        </h3>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="col-md-5">
                    {{ 'Identyfikator'|trans }}
                </th>
                <th class="col-md-5">
                    {{ 'Adres e-mail'|trans }}
                </th>
                <th class="col-md-2 text-center">
                    {{ 'Data dodania'|trans }}
                </th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td class="col-md-5">
                        {{ user.id }}
                    </td>
                    <td class="col-md-5">
                        {{ user.email }}
                    </td>
                    <td class="col-md-2 text-center">
                        {{ user.addedAt|date('Y-m-d') }}
                    </td>
                </tr>
            {% else %}
                <td colspan="3" class="col-md-12">{{ 'Brak użytkowników.'|trans }}</td>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="col-md-12">{{ 'Liczba użytkowników' }}: {{ users.getTotalItemCount }}</th>
            </tr>
        </tfoot>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>
</div>
{% endblock %}
