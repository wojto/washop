{% extends 'shop/layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="{{ asset('build/shop/css/main.css') }}"/>
{% endblock %}

{% block body %}
    <div id="main-container">
        <section id="main-header" class="container-fluid">
            <div class="row">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <a href="{{ path('homepage') }}">
                                {{ 'Przejdź do sklepu'|trans }}
                            </a>
                            |
                            <a href="{{ path('admin_homepage') }}">
                                {{ 'Przejdź do panelu administracyjnego'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="container">
            <div class="row">
                <div id="main-content" class="col-sm-12">
                    {% for flash_message in app.session.flashbag.get('notice') %}
                        <div class="col-md-12 alert alert-info alert-dismissable main-alert">
                            {{ flash_message }}
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        </div>
                    {% endfor %}
                    {% for flash_message in app.session.flashbag.get('success') %}
                        <div class="col-md-12 alert alert-success alert-dismissable main-alert">
                            {{ flash_message }}
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        </div>
                    {% endfor %}
                    {% for flash_message in app.session.flashbag.get('error') %}
                        <div class="col-md-12 alert alert-danger alert-dismissable main-alert">
                            {{ flash_message }}
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        </div>
                    {% endfor %}

                    {% block content %}
                    {% endblock %}
                </div>
            </div>

            <div class="row m-t-xl">
                <section id="main-footer">
                    <div class="container-fluid" id="footer-bottom">
                        <div class="row">
                            <small class="col-md-12 text-center">
                                {{ 'Copyright &copy; 2000 - %year% washop.pl'|trans({'%year%': 'now'|date('Y') })|raw }}
                            </small>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}
